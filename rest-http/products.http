@APP_URL = {{$dotenv APP_URL}}
@contentType = application/json
@feature = products

### getAll -- query opt = ?limit=2&offset=0&minPrice=200&maxPrice=200&like=product
GET {{APP_URL}}/{{feature}}?limit=2&offset=0&minPrice=200&maxPrice=200 HTTP/1.1

### getOne
GET {{APP_URL}}/{{feature}}/1 HTTP/1.1

### Create
POST {{APP_URL}}/{{feature}} HTTP/1.1
Content-Type: {{contentType}}

{
    "name": "Product 4",
    "description": "Description product 4",
    "price": 200,
    "image": "pagina.com",
    "stock": 2,
    "brandId": 1,
    "categoriesIds": [1]
}

### Update
PUT {{APP_URL}}/{{feature}}/1 HTTP/1.1
Content-Type: {{contentType}}

{
    "brandId": 1,
    "categoriesIds": [1,2]
}

### Add category by Product
PUT {{APP_URL}}/{{feature}}/1/category/2 HTTP/1.1

### delete
DELETE {{APP_URL}}/{{feature}}/1 HTTP/1.1

### delete category by Product
DELETE {{APP_URL}}/{{feature}}/2/category/1 HTTP/1.1
